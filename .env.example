# ========================================
# PT Cipta Metalindo Persada - Environment Variables
# ========================================
# Copy this file to .env.local and fill in the values.
# NEVER commit .env.local to version control.

# ----------------------------------------
# Cloudinary Configuration
# ----------------------------------------
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
VITE_CLOUDINARY_API_KEY=your_api_key
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# ----------------------------------------
# Headless CMS Configuration
# ----------------------------------------
# Supports: strapi | contentful | sanity | directus | custom
VITE_CMS_PROVIDER=custom
VITE_CMS_API_URL=https://your-cms-api-url.com/api
VITE_CMS_API_KEY=your_cms_api_key

# ----------------------------------------
# Google Maps
# ----------------------------------------
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
VITE_GOOGLE_MAPS_EMBED_URL=https://www.google.com/maps/embed?pb=!1m18...

# ----------------------------------------
# Contact Form / Email Service
# ----------------------------------------
# Supports: sendgrid | mailgun | smtp | formspree
VITE_CONTACT_FORM_ENDPOINT=https://formspree.io/f/your_form_id
VITE_CONTACT_EMAIL=info@ciptametalindo.com

# ----------------------------------------
# Analytics
# ----------------------------------------
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_GTM_ID=GTM-XXXXXXX

# ----------------------------------------
# General
# ----------------------------------------
VITE_SITE_URL=https://www.ciptametalindo.com
VITE_DEFAULT_LOCALE=en
